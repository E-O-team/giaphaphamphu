                        <a href="{{personUrl slug}}"><h5>{{this.fullName}}</h5></a>
                    </div>
                </div>

                <!-- Đời 3 -->

                {{#if this.children}}
                    <!-- <canvas class="2-3" width="50" height="80">Trình duyệt không hỗ trợ hình vẽ</canvas> -->
                    <div class="flex-container text-center">
                        {{#each this.children}}
