                                                <div class="horBorder"></div>
                                                <div class="card">
                                                    <div class="lineUp">
                                                    </div>
                                                    {{#if this.children}}
                                                        <div class="lineDown">
                                                        </div>
                                                    {{/if}}
                                                    {{#if this.image}}
                                                        <a href="{{personUrl slug}}"><img class="card-img-top" src='{{{cloudinaryUrl image width="60" height="80" }}}' alt="person" /></a>
                                                    {{/if}}
                                                    <div class="card-body">
                                                        <a href="{{personUrl slug}}"><h5>{{this.fullName}}</h5></a>
                                                    </div>
                                                </div>

