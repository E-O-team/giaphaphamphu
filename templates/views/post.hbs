<style type="text/css">
	.img-responsive{
		float: left;
		width: 50%;
		padding: 0 20px 10px 0;
	}
	@media (max-width:600px) {
		.img-responsive{
		width:100%;
	}
	}
</style>
<div class="container">
	<div class="jumbotron" style="background-color: rgb(245,212,159);">
		<div class="row">
			<div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
				<article>
					<header>
						<h1>{{data.post.title}}</h1>
						<h5 style="text-align:justify;">
							{{{categoryList data.post.categories prefix="Posted in "}}}
							{{#if author.name.first}}by {{author.name.first}}{{/if}}
						</h5>
					</header>
					<div class="post">
						{{#if data.post.image}}<img src="{{{cloudinaryUrl data.post.image crop='fit'}}}" class="img-responsive">{{/if}}
						{{{data.post.content.extended}}}
					</div>
				</article>
			</div>
		</div>
	</div>
</div>
